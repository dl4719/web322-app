<div class="row">

    <div class="col-md-12">

        <h2>Items</h2>
        
        <hr />
        <div class="table-responsive">
            <%- include('layouts/main', {page: '/items'}) %>
            <table class="table">
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Title</th>
                        <th>Post Date</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Published</th>
                    </tr>
                </thead>
                <tbody>
                    <% items.forEach(item => { %>
                        <tr>
                            <td><%= item.id %></td>
                            <td><%= item.title %></td>
                            <td><%= item.postDate %></td>
                            <td>$<%= item.price %></td>
                            <td>
                                <a href="/items?category=<%= item.category %>">
                                    <%= item.category %>
                                </a>
                            </td>
                            <td><%= item.published ? 'True' : 'False' %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

    </div>
    <% if (!items || items.length === 0) { %>
        <div class="col-md-12 text-center">
            <strong><%= message %></strong>
        </div>
    <% } %>
</div>
