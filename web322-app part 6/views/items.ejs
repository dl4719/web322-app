<%- include('layouts/main', {page: '/items'}) %>
<div class="row">
    <div class="col-md-12">
        <% if (items.length > 0) { %>
        <h2>Items</h2>
        <a href="/Items/add" class="btn btn-success pull-right">Add Post</a>
        
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Title</th>
                        <th>Post Date</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Published</th>
                    </tr>
                </thead>
                <tbody>
                    <% items.forEach(item => { %>
                        <tr>
                            <td><%= item.id %></td>
                            <td><%= item.title %></td>
                            <td><%= item.postDate %></td>
                            <td>$<%= item.price %></td>
                            <td>
                                <a href="/items?category=<%= item.category %>">
                                     <%= item.category ? item.category.category : "No Category" %>
                                </a>
                            </td>
                            <td><%= item.published ? 'True' : 'False' %></td>

                            <td>
                                <form action="/Items/delete/<%= item._id %>" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger">Remove Post</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

    </div>
    <% } else { %>
        <div class="text-center">
            <h2>No results found</h2>
            <p>Please try another search or add a new item.</p>
            <a href="/Items/add" class="btn btn-primary">Add Item</a>
        </div>
    <% } %>
</div>
