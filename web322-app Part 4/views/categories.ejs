<div class="row">

    <div class="col-md-12">

        <h2>Categories</h2>

        <hr />

        <div class="table-responsive">
            <%- include('layouts/main', {page: '/categories'}) %>
            <table class="table">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                    </tr>
                </thead>
                <tbody>
                    <% categoryItem.forEach(category => { %>
                        <tr>
                            <td>
                                <a href="/items?category=<%= category.category %>">
                                    <%= category.id %>
                                </a>
                            </td>
                            <td>
                                <a href="/items?category=<%= category.category %>">
                                    <%= category.category %>
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

    </div>

    <% if (!categoryItem || categoryItem.length === 0) { %>
        <div class="col-md-12 text-center">
            <strong><%= message %></strong>
        </div>
    <% } %>
</div>
