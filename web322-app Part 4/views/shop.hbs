<div class="row">
  <section class="main col-md-9">
    {{#if data.post}}
        <item>
        <div class="row">
            <div class="col-4">
            <h2>{{data.post.Title}}</h2>
            <img
                src="{{data.post.featureImage}}"
                alt="feature Image"
                style="width:100%"
            />

            </div>

            <div class="col-8"><br />
            <br />
            <div class="row">
                <div class="col-12">
                    {{{safeHTML data.post.body}}}
                <br /><br />
                <strong>Price:</strong>
                $ {{data.post.price}}<br />
                <strong>Category:</strong>
                {{data.post.category}}<br />
                <strong>Last Updated:</strong>
                {{data.post.postDate}}
                </div>
            </div>
            </div>
        </div>
        </item>
    {{/if}}
    
  </section>

  <aside class="col-md-3">
    <br /><br />

    {{#if data.posts}}
        <h4>Items</h4>
        <ul class="list-group">
            {{#each data.posts}}
                <a href="/shop/{{data.items.id}}?category={{data.categories.id}}{" class="list-group-item">
                    {{data.items.Title}}
                </a>
            {{/each}}
        </ul>
    {{/if}}

    {{#if data.categories}}
    <h4>Categories</h4>
        <ul class="list-group">
            {{#each data.posts}}
                <a href="/shop?category={{data.categories.id}}{" class="list-group-item">
                    {{data.items.Title}}
                </a>
            {{/each}}
        </ul>
    {{/if}}
  </aside>
    {{#else}}
        <div class="col-md-12 text-center">
            <h2>{{data.message}}</h2>
            <p>Please try another Post / Category</p>
        </div>
    {{/else}}
</div>